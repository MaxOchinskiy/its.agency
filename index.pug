doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title its.agency
    link(href="style/style.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com" rel="preconnect")
    link(href="https://fonts.gstatic.com" rel="preconnect" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet")
    style.
      .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.3);
        z-index: 9;
        display: none;
      }
      .custom-select {
        position: relative;
        z-index: 10;
      }

  body
    header
      .header-content
        .header-left
          img.header-content__logo-img(src="image/logo.png" alt="Логотип")
          nav.header-nav
            a(href="#") ПРОДУКТЫ
            a(href="#") ЦВЕТА
            a(href="#") ВДОХНОВЕНИЕ
            a(href="#") СОВЕТЫ
            a(href="#") НАЙТИ МАГАЗИН
          button.hamburger(aria-controls="mobile-menu" aria-expanded="false" aria-label="Открыть меню")
            span
            span
            span
            svg.hamburger-cross(width="48" height="48" viewBox="0 0 48 48" style="fill: none;")
              circle(cx="24" cy="24" r="23.5" stroke="black" opacity="0.1")
              g(transform="translate(12,12)")
                path(d="M18 6L6 18" stroke="#1F2020" style="stroke-linecap: round; stroke-linejoin: round; stroke-width: 1.4;")
                path(d="M6 6L18 18" stroke="#1F2020" style="stroke-linecap: round; stroke-linejoin: round; stroke-width: 1.4;")
        
        .header-right
          .hide-mobile
            .header__contact
              a(href="tel:+74952217769") +7 (495) 221-77-69
              span Заказать звонок
          .header__menu
            a(href="#")
              img.hide-menu(src="image/search.png" alt="Поиск")
            a(href="#")
              img.hide-menu(src="image/profile.png" alt="Профиль")
            a(href="#")
              img.hide-menu(src="image/heart.png" alt="Избранное")
            .header__menu__cart
              span.cart-icon
                svg(width="24" height="24" viewBox="0 0 24 24" style="fill: none;")
                  circle(cx="12" cy="12" r="12" fill="#7BB899")
                  text#cartTotalCountHeader(x="12" y="16" text-anchor="middle" font-family="Arial" font-size="12" fill="black") 0

    .overlay#selectOverlay
    .overlay#sortOverlay(style="display:none;")

    main
      .main-content
        .main-content__img.hide-photo__main
          img.main-content__img(src="image/rectangle.png" alt="Фото вазы с цветком у стены")
        div
          span.main-nav
            a(href="#") ГЛАВНАЯ
            a(href="#") ПРОДУКТЫ
            a(href="#") КРАСКИ
        h1.main-title Краски
        p.main-desc.hide-text__main.hide-chevron_title Идеально подходят для стен и других поверхностей. Найди свой идеальный цвет!
        .main-nav__slice-f.hide-slice_f
          .main-slider-dots
            svg(width="124" height="32" viewBox="0 0 124 32" style="fill: none;")
              rect(width="124" height="32" rx="16" fill="black" style="fill-opacity: 0.4;")
              circle(cx="27" cy="16" r="3" fill="white")
              circle(cx="41" cy="16" r="3" fill="white" opacity="0.2")
              circle(cx="55" cy="16" r="3" fill="white" opacity="0.2")
              circle(cx="69" cy="16" r="3" fill="white" opacity="0.2")
              circle(cx="83" cy="16" r="3" fill="white" opacity="0.2")
              circle(cx="97" cy="16" r="3" fill="white" opacity="0.2")
        .main-nav__chevron__left.hide-chevron
          img(src="image/chevron-left.png" alt="Chevron left")
        .main-nav__chevron__right.hide-chevron
          img(src="image/chevron-right.png" alt="Chevron right")
      
      .catalog-top-line
        .filter-list
        .custom-select.main-nav__sort__catalog__text
          div
            span.filter-mobile-btn#filterOpenBtn ФИЛЬТРЫ
            .filter-modal#filterModal
              .filter-modal__overlay#filterOverlay
              .filter-modal__content
                button.filter-modal__close#filterModalClose
                  svg(width="28" height="4" viewBox="0 0 28 4" style="fill: none;")
                    rect(width="28" height="4" rx="2" fill="#1F2020" opacity="0.6")
                .filter-list
                  label.filter-item
                    input(type="radio" name="filter" checked)
                    span.toggle-switch
                      span.toggle-circle
                    | НОВИНКИ
                  label.filter-item
                    input(type="radio" name="filter")
                    span.toggle-switch
                      span.toggle-circle
                    | ЕСТЬ В НАЛИЧИИ
                  label.filter-item
                    input(type="radio" name="filter")
                    span.toggle-switch
                      span.toggle-circle
                    | КОНТРАКТНЫЕ
                  label.filter-item
                    input(type="radio" name="filter")
                    span.toggle-switch
                      span.toggle-circle
                    | ЭКСКЛЮЗИВНЫЕ
                  label.filter-item
                    input(type="radio" name="filter")
                    span.toggle-switch
                      span.toggle-circle
                    | РАСПРОДАЖА
          .filter-mobile
            span.sort-mobile-btn#sortOpenBtn СОРТИРОВКА
            .sort-modal#sortModal
              .sort-modal__overlay#sortModalOverlay
              .sort-modal__content
                button.sort-modal__close#sortModalClose
                  svg(width="28" height="4" viewBox="0 0 28 4" style="fill: none;")
                    rect(width="28" height="4" rx="2" fill="#1F2020" opacity="0.6")
                .sort-list
                  .sort-item.custom-select__option.custom-select__option--active СНАЧАЛА ДОРОГИЕ
                  .sort-item.custom-select__option СНАЧАЛА НЕДОРОГИЕ
                  .sort-item.custom-select__option СНАЧАЛА ПОПУЛЯРНЫЕ
                  .sort-item.custom-select__option СНАЧАЛА НОВЫЕ
            .custom-select__selected СНАЧАЛА ДОРОГИЕ
            .custom-select__dropdown
              .custom-select__option.custom-select__option--active СНАЧАЛА ДОРОГИЕ
              .custom-select__option СНАЧАЛА НЕДОРОГИЕ
              .custom-select__option СНАЧАЛА ПОПУЛЯРНЫЕ
              .custom-select__option СНАЧАЛА НОВЫЕ
        .count__product.hide-count__product
          h3
            span#productCount 412
            |  ТОВАРОВ
      
      .catalog-product-row
        .filter-list--spacer
          .product-list

    footer.footer
      .container
        p 1

    .cart-modal#cartModal(style="display:none;")
      .cart-modal__overlay#cartModalOverlay
      .cart-modal__content
        button.cart-modal__close#cartModalClose
          svg(width="48" height="48" viewBox="0 0 48 48" style="fill: none;")
            circle(cx="24" cy="24" r="23.5" stroke="black" opacity="0.1")
            g(transform="translate(12,12)")
              path(d="M18 6L6 18" stroke="#1F2020" style="stroke-linecap: round; stroke-linejoin: round; stroke-width: 1.4;")
              path(d="M6 6L18 18" stroke="#1F2020" style="stroke-linecap: round; stroke-linejoin: round; stroke-width: 1.4;")
        .cart-modal__header
          h2 Корзина
          span.cart-modal__count#cartTotalCount
          button.cart-modal__clear#cartModalClear ОЧИСТИТЬ СПИСОК
        .cart-modal__items-container#cartItems
        .cart-modal__footer
          .cart-modal__total
            | Итого 
            span#cartTotal 0 ₽
          button.cart-modal__order#cartModalOrder ОФОРМИТЬ ЗАКАЗ

    script(src="axios.min.js")
    script(src="main.js") 